<!DOCTYPE html>
<html>
<head>
    <title></title>
	<meta charset="utf-8" />

    <script type="text/javascript" src="js/jquery-3.2.1.min.js"></script>
	<!-- Styling Links -->
	<link rel="stylesheet" type="text/css" href="css/style.css">
    <script type="text/javascript" src="js/script.js"></script>
    <script src="https://use.fontawesome.com/2779c7d352.js"></script>
    <link href="css/login.css" type="text/css" rel="stylesheet">
    <link href="css/bootstrap.css" rel="stylesheet">
    
    <!-- Bootstrap/Javascript -->
    <script type="text/javascript" src="js/bootstrap.js"></script>
	<link href="https://fonts.googleapis.com/css?family=Acme|Baloo+Tammudu|Cinzel|Dosis|Gloria+Hallelujah|Indie+Flower|Nunito|Open+Sans+Condensed:300|PT+Sans+Narrow|Permanent+Marker|Play|Raleway|Satisfy" rel="stylesheet">

</head>
    <body id='body'>
        <div class='container' id='body-div'>
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display --> 
                    <div class="navbar-header">
                        <a class="navbar-brand" href="/">Go-Logos</a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li><a href="/"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home <span class="sr-only">(current)</span></a></li>
                            <!-- if the user is logged in then display the My Logos and create logo button -->
                            <% if(typeof(req.user) !== 'undefined') { %>
                                <li><a href="/MyLogos"><span class="glyphicon glyphicon-picture" aria-hidden="true"></span> My Logos</a></li>
                                <li><a href="/CreateLogo"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Create Logo</a></li>
                            <% } %>
                            <li><a href="/Help"><span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span> Help</a></li>
                            <li><a href="/AboutUs"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> About Us</a></li>
                        </ul>

                        <ul class="nav navbar-nav navbar-right">
                            <!-- if the user is logged in then display the logout button -->
                            <% if(typeof(req.user) !== 'undefined') { %>
                            <li><button type="button" class="btn btn-default navbar-btn"><a href='/Logout'><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Logout</a></button>
                            <!-- Else there is no user logged in, display the login button -->
                            <% }else{ %>
                            <li><button type="button" class="btn btn-default navbar-btn"><a href='/Login'><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Sign in</a></button></li>
                            <% } %>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
            <div id="content-wrapper">
                <%- body %>
            </div>
        </div>
    </body>


<script type="text/javascript" src="js/jscolor.min.js"></script>
</html>
